<%if logged_in? && current_user==@user%>
  <%=form_for @user do |f|%>
    <%= render :partial => "form", :locals=>{:f=>f} %>
    <%=f.label :password_confirmation%>
    <%=f.text_field :password_confirmation%>
  <br></br>
  <%=f.submit %>
  <%end%>
<%else%>
  <h2><%=@user.username%></h2>
  Sorry, you are not authorized to view this page.
<%end%>
