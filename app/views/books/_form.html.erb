<%if @book.errors.any?%>
<div id="error_explanation">
<h2><%=pluralize(@book.errors.count, "error")%> popped up:</h2>
  <%@book.errors.full_messages.each do |e|%>
  <li><%=e%></li>
</div>
  <%end%>
<%end%>

<%=form_for @book do |f|%>
  <%=f.label :title%>
  <%=f.text_field :title%>
  <br></br>
  <%=f.label :summary%>
  <%=f.text_area :summary%>
  <br></br>
  <%=f.submit%>

<%end%>
